# A/P Anomaly Detector — copy to .env and set values. Never commit .env.

# Database (use postgresql://... in production)
DATABASE_URL=sqlite:///./ap_anomaly.db

# QuickBooks OAuth — from Intuit Developer Portal
QBO_CLIENT_ID=
QBO_CLIENT_SECRET=
QBO_REDIRECT_URI=http://localhost:8000/api/auth/qbo/callback
QBO_ENVIRONMENT=sandbox

# Optional: production mode (validates required secrets at startup)
ENVIRONMENT=development

# Alert thresholds
ALERT_MIN_AMOUNT=500.0
ALERT_SIGMA_THRESHOLD=2.0
DUPLICATE_DAY_WINDOW=7
BASELINE_DAYS=90

# SMTP (optional — for email alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_FROM_EMAIL=

# Rate limiting (requests per minute per IP / per API key)
RATE_LIMIT_REQUESTS_PER_MINUTE_IP=100
RATE_LIMIT_REQUESTS_PER_MINUTE_USER=100
